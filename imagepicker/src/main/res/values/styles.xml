<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ef_BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ef_AppTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/ef_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ef_colorPrimaryDark</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <style name="ef_CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ef_colorTextPrimary</item>
        <item name="actionMenuTextColor">@color/ef_colorTextPrimary</item>
    </style>

    <style name="ef_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:subtitleTextColor" tools:targetApi="m">@android:color/black</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="actionOverflowButtonStyle">@style/ef_Dark.Menu</item>
    </style>

    <style name="ef_Dark.Menu" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/ef_white</item>
    </style>

</resources>
